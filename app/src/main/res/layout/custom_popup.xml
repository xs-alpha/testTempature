<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/actionsheet_gray"
    android:layout_height="300dp"
    tools:context=".LogViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="详情"
        android:layout_height="14sp"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <TableLayout
                android:id="@+id/read_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="50dp"
                android:divider="@drawable/line_h"
                android:showDividers="beginning|middle|end">
                <!-- Add TableRows and cells dynamically here -->
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
   <LinearLayout
       android:layout_width="match_parent"

       android:layout_height="wrap_content">
       <Button
           android:layout_width="0dp"
           android:id="@+id/tc_ok"
           android:layout_weight="1"
           android:text="确定"
           android:layout_height="wrap_content"></Button>
       <Button
           android:layout_width="0dp"
           android:id="@+id/tc_cancel"
           android:layout_weight="1"
           android:text="取消"
           android:layout_height="wrap_content"></Button>
   </LinearLayout>
</LinearLayout>